def colour(Sum):
    colourlist = ['Red','Blue','Green']
    col = (input('What colour?: '))
    h = input('How many?: ')
    rem = Sum - h
    if rem != 0:
        print 'What is the colour of', rem, 'remaining?'
        o = input('What is the colour?')
        hh = input('how many?')
        rem = rem - hh
        if rem != 0:
            print 'What is the colour of', rem, 'remaining?'
            quii = input('What is the colour?')
            hhh = input('how many?')


def colour2(Sum):
    red = 'Red'
    blue = 'Blue'
    green = 'Green'
    col = str(input('What colour do you want?: '))

    if col != red:
        print 'invalid col'
    elif col != blue:
        print 'invalid col'
    elif col != green:
        print 'invalid col'
    else:
        print col, Sum


